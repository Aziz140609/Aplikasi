<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="16dp"
    tools:context=".Kalkulator">

    <androidx.cardview.widget.CardView
        android:id="@+id/Pembatas"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Pembatas">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/calculator"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvKalkulator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalkulator"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Pembatas"
        app:cardBackgroundColor="@color/bg_gambar"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/text_primary"
        app:strokeWidth="2dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvHasil"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:textSize="40sp"
                android:hint="0"
                android:textColor="@color/text_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tvHasilMini"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingEnd="20dp"
                android:textSize="20sp"
                android:hint="0"
                android:gravity="end"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/tvHasil"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



    <!-- Angka = card_light -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_light"
        android:text="7"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toEndOf="@id/Pembatas"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn8" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_light"
        android:text="8"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@id/btn9" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_light"
        android:text="9"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@id/btnPlus" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/card_light"
        android:text="5"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn6" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/card_light"
        android:text="4"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/Pembatas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/card_light"
        android:text="6"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnminus" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_light"
        android:text="2"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toTopOf="@id/btn5"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn3" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_light"
        android:text="3"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintEnd_toStartOf="@id/btnTimes" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:text="1"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/card_light"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/Pembatas"
        app:layout_constraintEnd_toStartOf="@id/btn2" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_light"
        android:text="0"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btnKoma" />


    <!-- Operator -->
    <Button
        android:id="@+id/btnminus"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/card_blue"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTimes"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_blue"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@id/btnminus"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_blue"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btnminus" />

    <Button
        android:id="@+id/btnKoma"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_blue"
        android:text="."
        app:layout_constraintEnd_toStartOf="@id/btnequal"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@id/btn9" />

    <Button
        android:id="@+id/btnDevide"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_blue"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@id/btnTimes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnDelate" />


    <!-- C dan DEL -->
    <Button
        android:id="@+id/btnDelate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_blue"
        android:text="Del"
        app:layout_constraintBottom_toTopOf="@id/btn3"
        app:layout_constraintEnd_toStartOf="@id/btnDevide"
        app:layout_constraintStart_toEndOf="@id/btnC" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/card_blue"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        app:layout_constraintStart_toStartOf="@id/btn1"
        app:layout_constraintEnd_toEndOf="@id/btn2" />


    <!-- Equal -->
    <Button
        android:id="@+id/btnequal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#4CAF50"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPlus"
        app:layout_constraintStart_toEndOf="@id/btnKoma"/>

</androidx.constraintlayout.widget.ConstraintLayout>
