<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/bg_main">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/header_card"
                android:layout_width="300dp"
                android:layout_height="355dp"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/bg_gambar"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/foto"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Aziz Achmad Juniar"
                        android:textColor="#0D47A1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

                    <TextView
                        android:id="@+id/Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="SISWA SMKN 6 SURAKARTA"
                        android:textColor="#1E88E5"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvNama" />

                    <TextView
                        android:id="@+id/tvDeskripsiDiri"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Aku adalah seorang siswa di SMKN 6 SURAKARTA dan Mengambil jurusan PPLG dan sekarang adalah tahun ke-2 di sekolah ini"
                        android:textAlignment="center"
                        android:textColor="#1E88E5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Status" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Kontak_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/bg_gambar"
                app:cardCornerRadius="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/header_card"
                app:layout_constraintBottom_toTopOf="@id/cardSkill">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp">


                <TextView
                    android:id="@+id/tvContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact : "
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#0D47A1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email : azizachmadjuniar@gmail.com"
                    android:textSize="15sp"
                    android:textColor="#1E88E5"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvContact"/>

                <TextView
                    android:id="@+id/tvNomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No : +62 812-2699-8105"
                    android:textSize="15sp"
                    android:textColor="#1E88E5"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tvEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/tvig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram : azizaj_09"
                    android:textSize="15sp"
                    android:textColor="#1E88E5"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvNomer"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSkill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/bg_gambar"
                app:cardCornerRadius="25dp"
                app:layout_constraintTop_toBottomOf="@+id/Kontak_card"
                app:layout_constraintStart_toEndOf="@id/header_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/Skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skill : "
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#0D47A1"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <LinearLayout
                        android:id="@+id/Baris1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/Skill">


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="Figma"
                            android:backgroundTint="@color/card_blue"
                            android:textColor="#ffffff"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="Java"
                            android:backgroundTint="@color/card_blue"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="XML"
                            android:backgroundTint="@color/card_blue"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Baris2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/Baris1">


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="Kotlin"
                            android:backgroundTint="@color/card_blue"
                            android:textColor="#ffffff"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="HTML"
                            android:backgroundTint="@color/card_blue"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="css"
                            android:backgroundTint="@color/card_blue"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
